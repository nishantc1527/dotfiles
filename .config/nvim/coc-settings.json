{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "java",
    "rust"
  ],
  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  },
  "cSpell.userWords": [
    "Arial",
    "Chatterjee",
    "Gdiffsplit",
    "Lanterna",
    "Nerdfont",
    "Nishant",
    "alvan",
    "artanikin",
    "bclose",
    "bluz",
    "curr",
    "flazz",
    "francoiscabrol",
    "fullscreen",
    "glepnir",
    "gruvbox",
    "haishanh",
    "honza",
    "jaredgorski",
    "jfinder",
    "jiangmiao",
    "junegunn",
    "mhinz",
    "neoclide",
    "nums",
    "nvim",
    "pylint",
    "rbgrouleff",
    "sainnhe",
    "scrollback",
    "sheerun",
    "startify",
    "threadsafe",
    "tomasiser",
    "tpope",
    "ultisnips",
    "vsplit"
  ],
  "languageserver": {
    "kotlin": {
      "command": "~/.config/nvim/kotlin-language-server/server/build/install/server/bin/kotlin-language-server",
      "filetypes": [
        "kotlin"
      ]
    }
  }
}
